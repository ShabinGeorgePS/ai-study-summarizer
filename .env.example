# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env file to version control!

# ================================================
# DATABASE CONFIGURATION
# ================================================
DB_URL=jdbc:postgresql://localhost:5432/ai_study_summarizer
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here

# ================================================
# JWT AUTHENTICATION
# ================================================
# Generate secure secret: openssl rand -base64 32
JWT_SECRET=your_very_secure_secret_key_here_minimum_32_chars_required
JWT_EXPIRATION=3600000

# ================================================
# AI API (Google Gemini)
# ================================================
# Get key from: https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_MODEL=gemini-2.5-flash

# ================================================
# CORS CONFIGURATION
# ================================================
# Allowed origins for Cross-Origin requests (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ================================================
# FRONTEND CONFIGURATION
# ================================================
VITE_API_BASE_URL=http://localhost:8080/api
VITE_API_TIMEOUT=30000
VITE_ENABLE_API_LOGGING=true

# ================================================
# OPTIONAL: Email Configuration (for password reset)
# ================================================
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
# MAIL_FROM=noreply@aistudysummarizer.com

# ================================================
# OPTIONAL: AWS S3 Configuration (for file storage)
# ================================================
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
